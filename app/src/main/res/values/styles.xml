<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalendarTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorMagenta</item>
    </style>


    <style name="WeekDayText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DayText" parent="TextAppearance.AppCompat">
<!--        <item name="android:textColor">#101010</item>-->
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>